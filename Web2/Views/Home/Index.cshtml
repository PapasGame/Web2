@model bool
@{
    ViewData["Title"] = "Home Page";
}


@if (@Model == true)
{


    @section Preload{
        <div class="bm_container"
             style="
            background-color: black;
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 99998;">

            <div id="bm" style="height: 100%"></div>

        </div>

        <script src="~/animation/lottie.js"></script>
        <script src="~/animation/mainAnimation.js"></script>


        <script>


            window.onload = function () {
                setTimeout(() => {
                    $('.bm_container').fadeOut();
                }, 3500)
            };


        </script>
    }
}

<div class="text-center">
   
    <link rel="apple-touch-icon" href="/docs/5.0/assets/img/favicons/apple-touch-icon.png" sizes="180x180">
    <link rel="icon" href="/docs/5.0/assets/img/favicons/favicon-32x32.png" sizes="32x32" type="image/png">
    <link rel="icon" href="/docs/5.0/assets/img/favicons/favicon-16x16.png" sizes="16x16" type="image/png">
    <link rel="manifest" href="/docs/5.0/assets/img/favicons/manifest.json">
    <link rel="mask-icon" href="/docs/5.0/assets/img/favicons/safari-pinned-tab.svg" color="#7952b3">
    <link rel="icon" href="/docs/5.0/assets/img/favicons/favicon.ico">
    <meta name="theme-color" content="#7952b3">


    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      
    </style>


    <!-- Custom styles for this template -->
    
            

            <div class="px-4 pt-5 my-5 text-center border-bottom">
                <h1 class="display-4 fw-bold">Добро пожаловать!</h1>
                <div class="col-lg-6 mx-auto">
                    <p class="lead mb-4">PlanDots — лучший сайт для планирования своего обучения. Создай свой план или выбери из большой базы готовых планов. Отслеживай свой прогресс обучения.</p>
                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mb-5">
                        @if (@User.Identity.Name == null)
                        {
                            <a role="button" class="btn btn-lg btn-primary" asp-action="Login" asp-controller="Account">Войти</a>
                            <a role="button" class="btn btn-secondary btn-lg" asp-action="Register" asp-controller="Account">Регистрация</a>
                        }
                    </div>
                </div>
                <div class="overflow-hidden" style="max-height: 15vh;">
                    <div class="container px-5">
                        <img src="~/icons/scheme.jpg" class="img-fluid border rounded-3 shadow-lg mb-4" alt="Example image" width="700" height="500" loading="lazy">
                    </div>
                </div>
            </div>

</div>