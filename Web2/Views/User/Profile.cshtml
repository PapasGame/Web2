<div class="containerOur">
    <div class="info-block">
        <div>
            <p class="user_name headers">@User.Identity.Name</p>
        </div>
        <div class="info_buttons">
            @*<button class="change_password info_btn">Сменить пароль</button>*@
            <form asp-action="Logout" asp-controller="Account" asp-anti-forgery="true">
                <button type="submit" class="user_exit info_btn">Выйти</button>
            </form>
        </div>
    </div>

    <div class="info-subscribe-block maps_block">
        <div>
            <p class="map_header headers">Мои подписки</p>
        </div>
        <div class="container text-center my-3">
            <div class="row mx-auto my-auto">
                <div id="subsMapCarousel" class="carousel slide w-100" data-ride="carousel">
                    <div class="carousel-inner w-100" role="listbox">

                        @{
                            var check2 = true;
                        }
                        @foreach (var allMap in Model.SubsMap)
                        {
                            @if (check2)
                            {
                                <div class="carousel-item active ">
                                    <div class="d-block col-3 card" style="width: 18rem;">
                                        <div class="card-body">
                                            <h5 class="card-title">@allMap.Map.Name</h5>
                                            <a class="btn btn-primary" asp-controller="Map" asp-action="WorkWithMap" asp-route-id="@allMap.MapId">Продолжить</a>
                                        </div>
                                    </div>
                                </div>
                                check2 = false;
                            }
                            else
                            {
                                <div class="carousel-item ">
                                    <div class="d-block col-3 card" style="width: 18rem;">
                                        <div class="card-body">
                                            <h5 class="card-title">@allMap.Map.Name</h5>
                                            <a class="btn btn-primary" asp-controller="Map" asp-action="WorkWithMap" asp-route-id="@allMap.MapId">Продолжить</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }


                    </div>
                    <a class="carousel-control-prev" href="#subsMapCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Предыдущий</span>
                    </a>
                    <a class="carousel-control-next" href="#subsMapCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Cледующий</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="open_line"></div>
    </div>

    <div class="info-common-block maps_block">
        <div>
            <p class="map_header headers">Карты</p>
        </div>
        <div class="container text-center my-3" style="">
            <div class="row mx-auto my-auto">
                <div id="allMapCarousel" class="carousel slide w-100" data-ride="carousel">
                    <div class="carousel-inner w-100" role="listbox">

                        @{
                            var check = true;
                        }
                        @foreach (var allMap in Model.AllMap)
                        {
                            @if (check)
                            {
                                <div class="carousel-item active ">
                                    <div class="d-block col-3 card" style="width: 18rem;">
                                        <div class="card-body">
                                            <h5 class="card-title">@allMap.Name</h5>
                                            <a class="btn btn-primary" asp-controller="User" asp-action="SubscribeMap" asp-route-id="@allMap.MapId">Подписаться</a>
                                        </div>
                                    </div>
                                </div>
                                check = false;
                            }
                            else
                            {
                                <div class="carousel-item ">
                                    <div class="d-block col-3 card" style="width: 18rem;">
                                        <div class="card-body">
                                            <h5 class="card-title">@allMap.Name</h5>
                                            <a class="btn btn-primary" asp-controller="User" asp-action="SubscribeMap" asp-route-id="@allMap.MapId">Подписаться</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }


                    </div>
                    <a class="carousel-control-prev" href="#allMapCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Предыдущий</span>
                    </a>
                    <a class="carousel-control-next" href="#allMapCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Cледующий</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="open_line"></div>
    </div>
</div>






