</head>
<body>

    <div class="container">
        <div>
            <p class="headers title">
                PlanDots
            </p>
        </div>
        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <div class="headers" asp-validation-summary="ModelOnly"></div>
            <div class="input_block">
                <div>
                    <p class="headers">
                        Login
                    </p>
                </div>
                <div>
                    <input type="text" class="input_element login_input" placeholder="Enter your login" asp-for="Login" />
                </div>
            </div>
            <div class="input_block">
                <div>
                    <p class="headers">
                        Email
                    </p>
                </div>
                <div>
                    <input type="text" class="input_element login_input" placeholder="Enter your Email" asp-for="Email" />
                </div>
            </div>
            <div class="input_block">
                <div>
                    <p class="headers">
                        Password
                    </p>
                </div>
                <div>
                    <input type="text" class="input_element password_input" placeholder="Enter your password" asp-for="Password" />
                </div>
            </div>
            <div class="input_block">
                <div>
                    <p class="headers">
                        Confirm password
                    </p>
                </div>
                <div>
                    <input type="text" class="input_element confirm_password_input" placeholder="Repeate your password" asp-for="ConfirmPassword" />
                </div>
            </div>
            <div class="register_block">
                <input type="submit" value="Register" class="register_btn" />

                <a role="button" class="log_in" asp-action="Login" asp-controller="Account">Log in</a>
            </div>
        </form>
    </div>




