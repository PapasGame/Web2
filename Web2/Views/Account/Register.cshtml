@model Web2.Models.RegisterModel


<div class="container d-flex justify-content-center">

    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <h2>Регистрация</h2>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Login">Введите логин</label><br />
                <input class="form-control-sm" type="text" asp-for="Login" /><br>
                <span class="badge badge-light" asp-validation-for="Login" />
            </div>
            <div class="form-group">
                <label asp-for="Email">Введите Email</label><br />
                <input class="form-control-sm" asp-for="Email" /><br>
                <span class="badge badge-light" asp-validation-for="Email" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Введите пароль</label><br />
                <input class="form-control-sm" asp-for="Password" /><br>
                <span class="badge badge-light" asp-validation-for="Password" />
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                <input class="form-control-sm" asp-for="ConfirmPassword" /><br>
                <span class="badge badge-light" asp-validation-for="ConfirmPassword" />
            </div>
            <div class="form-group">
                <input class="btn btn-light" type="submit" value="Регистрация" />
            </div>
        </div>
    </form>
</div>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
